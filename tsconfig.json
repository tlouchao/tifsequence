{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "baseUrl": "src",
      "rootDir": "src",
      "outDir": "build",
      "noImplicitAny": false,
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx"
    },
    "include": [
      "**/*.ts",
      "/*.tsx",
      "/*.js",
      "/*.svg",
    ],
    "exclude": [
        "node_modules/*",
        "build/*"
    ],
  }